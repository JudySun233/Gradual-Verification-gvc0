{
  "title": {
    "text": "Composite",
    "anchor": "start"
  },
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 200,
  "height": 200,
  "data": {
    "url": "https://gist.githubusercontent.com/icmccorm/9ca4c8f3a4c72a6ca46d52b4e380abf8/raw/5e77e848ce9491d6784e50dc18ecfc5d0e410087/vcs_popl.csv"
  },
  "transform": [
    {
      "filter": {
        "field": "example",
        "equal": "composite"
      }
    },
    {
      "calculate": "{'total': 'Total', 'eliminated': 'Eliminated'}[datum.conj_type]",
      "as": "Category"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "errorband",
        "extent": "ci"
      },
      "encoding": {
        "x": {
          "field": "% Specified",
          "type": "quantitative"
        },
        "y": {
          "aggregate": "mean",
          "field": "% VCs",
          "type": "quantitative"
        },
        "color": {
          "field": "Category",
          "sort": "descending",
          "scale": {
            "domain": [
              "Total",
              "Eliminated"
            ],
            "range": [
              "#33a02c",
              "#6a3d9a"
            ]
          }
        }
      }
    },
    {
      "mark": "line",
      "encoding": {
        "x": {
          "field": "% Specified",
          "type": "quantitative"
        },
        "y": {
          "aggregate": "mean",
          "field": "VCs",
          "type": "quantitative"
        },
        "color": {
          "field": "Category"
        }
      }
    }
  ]
}