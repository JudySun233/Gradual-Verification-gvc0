{
  "title": {
    "text": "Composite",
    "anchor": "start"
  },
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 200,
  "height": 200,
  "data": {
    "url": "https://gist.githubusercontent.com/icmccorm/fe8f56b7428d820ade5054bbc2ae7794/raw/f80fa68d13f6d9b9ed28cc0973b03fa05ca391d9/vcs.csv"
  },
  "transform": [
    {
      "filter": {
        "field": "example",
        "equal": "composite"
      }
    },
    {
      "calculate": "{'total': 'Total', 'eliminated': 'Eliminated'}[datum.conj_type]",
      "as": "Category"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "errorband",
        "extent": "ci"
      },
      "encoding": {
        "x": {
          "field": "% Specified",
          "type": "quantitative"
        },
        "y": {
          "aggregate": "mean",
          "field": "% VCs",
          "type": "quantitative"
        },
        "color": {
          "field": "Category",
          "sort": "descending",
          "scale": {
            "domain": [
              "Total",
              "Eliminated"
            ],
            "range": [
              "#33a02c",
              "#6a3d9a"
            ]
          }
        }
      }
    },
    {
      "mark": "line",
      "encoding": {
        "x": {
          "field": "% Specified",
          "type": "quantitative"
        },
        "y": {
          "aggregate": "mean",
          "field": "% VCs",
          "type": "quantitative"
        },
        "color": {
          "field": "Category"
        }
      }
    }
  ]
}